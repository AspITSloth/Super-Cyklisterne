{% extends "base.html.twig" %}

{% block title %}Super Cyklisterne - Medlemmer{% endblock %}

{% block body %}

<table class="table">

    <thead class="thead-light">
        <tr>    
            <th>Username</th>
            <th>Password</th>    
        </tr>
    </thead>

    <tbody>
        {% if users|length < 1 %}

            <tr>
                <td>Intet at vise</td>
            </tr>

        {% else %}
            
        {% for user in users %}

            <tr>
                <td>{{ user.username }}</td>               
                <td>{{ user.password }}</td>        
            </tr>
            
        {% endfor %}

        {% endif %}

    </tbody>

</table>

{% endblock %}